<%- include("partials/header.ejs") %>
<div id="modifyContainer">
  <% if (locals.post) {%>

  <form action="/posts/edit/<%= post.id %>/" method="POST" class="newPostForm">
    <h2><%= heading %></h2>
    <input type="text" name="title" value="<%= post.title %>" />
    <textarea name="content" rows="10"><%= post.content %></textarea>
    <input type="text" name="author" value="<%= post.author %>" />
    <div class="buttonForm">
      <button type="submit" class="submitForm"><%= submit %></button>
      <a href="/" class="cancelButton">Cancel</a>
    </div>
  </form>
  <% } else { %>
  <form class="newPostForm" action="/posts/createPost" method="POST">
    <h2><%= heading %></h2>
    <input type="text" name="title" placeholder="Title" required />
    <textarea name="content" placeholder="Content" rows="10"></textarea>
    <input type="text" name="author" placeholder="Author" required />
    <div class="buttonForm">
      <button type="submit" class="submitForm"><%= submit %></button>
      <a href="/" class="cancelButton">Cancel</a>
    </div>
  </form>
  <% } %>
</div>
<%- include("partials/footer.ejs") %>
